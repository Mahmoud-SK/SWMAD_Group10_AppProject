<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/LikedMemeListItemView"
            android:layout_width="match_parent"
            android:layout_height="145dp">

            <ImageView
                android:id="@+id/img_likedMemeListItem"
                android:layout_width="123dp"
                android:layout_height="109dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.052"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.325"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/txt_authorName"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:hint="AuthorName"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="@+id/txt_title_authorName"
                app:layout_constraintStart_toStartOf="@+id/txt_title_authorName"
                tools:layout_editor_absoluteY="69dp" />

            <TextView
                android:id="@+id/txt_memeScore"
                android:layout_width="99dp"
                android:layout_height="25dp"
                android:hint="Score"
                app:layout_constraintEnd_toEndOf="@+id/txt_title_score"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txt_title_score"
                tools:layout_editor_absoluteY="69dp" />

            <TextView
                android:id="@+id/txt_title_authorName"
                android:layout_width="110dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="AuthorName"
                app:layout_constraintStart_toEndOf="@+id/img_likedMemeListItem"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_title_score"
                android:layout_width="99dp"
                android:layout_height="25dp"
                android:layout_marginTop="16dp"
                android:text="Score"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_title_authorName"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>