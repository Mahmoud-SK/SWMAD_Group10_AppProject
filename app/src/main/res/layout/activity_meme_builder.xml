<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MemeBuilderActivity">

    <ImageButton
        android:id="@+id/btn_imgUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toEndOf="@+id/btn_editMeme"
        app:layout_constraintTop_toBottomOf="@+id/img_camera"
        app:layout_constraintVertical_bias="0.959"
        app:srcCompat="@android:drawable/stat_sys_upload" />

    <Button
        android:id="@+id/btn_editMeme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Meme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.229"
        app:layout_constraintStart_toEndOf="@+id/btn_openCamera"
        app:layout_constraintTop_toBottomOf="@+id/img_camera"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_openCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_camera"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/img_camera"
        android:layout_width="376dp"
        android:layout_height="554dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <EditText
        android:id="@+id/txt_edit"
        android:layout_width="376dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="Edit your text"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/img_camera"
        app:layout_constraintEnd_toEndOf="@+id/img_camera"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_camera"
        app:layout_constraintTop_toTopOf="@+id/img_camera"
        app:layout_constraintVertical_bias="0.773" />
</androidx.constraintlayout.widget.ConstraintLayout>